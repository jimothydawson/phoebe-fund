<style>
    .mission-statement {
        padding: 100px 40px;
        background: white;
    }
    
    .mission-statement-content {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
    }
    
    .mission-statement .lead {
        font-size: 28px;
        line-height: 1.6;
        color: var(--dark);
        margin-bottom: 30px;
        font-family: 'roca', serif;
    }
    
    .mission-statement p {
        font-size: 18px;
        line-height: 1.9;
        color: var(--dark-light);
        margin-bottom: 20px;
    }
    
    .mission-charities {
        padding: 100px 40px;
        background: var(--cream);
    }
    
    .mission-charities .charities-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        max-width: 1100px;
        margin: 50px auto 0;
    }
    
    .mission-charities .charity-card {
        background: white;
        padding: 40px 30px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0,0,0,0.05);
    }
    
    .mission-charities .charity-logo {
        height: 60px;
        width: auto;
        margin-bottom: 20px;
        object-fit: contain;
    }
    
    .mission-charities .charity-logo-text {
        font-family: 'roca', serif;
        font-size: 24px;
        color: var(--orange);
        margin-bottom: 20px;
        padding: 15px 0;
    }
    
    .mission-charities .charity-card h3 {
        font-family: 'roca', serif;
        font-size: 24px;
        color: var(--dark);
        margin-bottom: 15px;
    }
    
    .mission-charities .charity-card p {
        font-size: 15px;
        color: var(--dark-light);
        line-height: 1.7;
        margin-bottom: 15px;
    }
    
    .charity-location {
        font-size: 13px;
        color: var(--orange);
    }
    
    .mission-values {
        padding: 100px 40px;
        background: white;
    }
    
    .values-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 30px;
        max-width: 1200px;
        margin: 50px auto 0;
    }
    
    .value-card {
        text-align: center;
        padding: 40px 25px;
    }
    
    .value-icon {
        font-size: 48px;
        margin-bottom: 20px;
    }
    
    .value-card h3 {
        font-family: 'roca', serif;
        font-size: 22px;
        color: var(--dark);
        margin-bottom: 15px;
    }
    
    .value-card p {
        font-size: 15px;
        color: var(--dark-light);
        line-height: 1.7;
    }
    
    .mission-wwpd {
        padding: 120px 40px;
        background: var(--orange);
        text-align: center;
    }
    
    .wwpd-content {
        max-width: 700px;
        margin: 0 auto;
        color: white;
    }
    
    .wwpd-content h2 {
        font-family: 'roca', serif;
        font-size: 72px;
        margin-bottom: 10px;
    }
    
    .wwpd-meaning {
        font-size: 24px;
        margin-bottom: 30px;
        opacity: 0.9;
    }
    
    .wwpd-content p:last-child {
        font-size: 18px;
        line-height: 1.8;
        opacity: 0.9;
    }
    
    .mission-cta {
        padding: 100px 40px;
        background: var(--dark);
        text-align: center;
        color: white;
    }
    
    .mission-cta h2 {
        font-family: 'roca', serif;
        font-size: 48px;
        margin-bottom: 20px;
    }
    
    .mission-cta p {
        font-size: 18px;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto 40px;
        line-height: 1.8;
    }
    
    .mission-cta .cta-btn {
        display: inline-block;
        background: var(--orange);
        color: white;
        text-decoration: none;
        padding: 18px 45px;
        border-radius: 0;
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
    }
    
    .mission-cta .cta-btn:hover {
        transform: translateY(-3px);
    }
    
    @media (max-width: 1024px) {
        .values-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (max-width: 900px) {
        .mission-charities .charities-grid {
            grid-template-columns: 1fr;
            max-width: 500px;
        }
        
        .mission-statement .lead {
            font-size: 24px;
        }
        
        .wwpd-content h2 {
            font-size: 56px;
        }
    }
    
    @media (max-width: 600px) {
        .values-grid {
            grid-template-columns: 1fr;
        }
        
        .mission-cta h2 {
            font-size: 36px;
        }
    }
</style>
