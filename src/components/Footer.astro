<style>
    .footer-trustee {
        max-width: 1200px;
        margin: 40px auto;
        padding: 30px 0;
        border-top: 1px solid rgba(255,255,255,0.1);
        border-bottom: 1px solid rgba(255,255,255,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
        text-align: center;
        flex-wrap: wrap;
    }
    
    .acf-logo {
        height: 50px;
        width: auto;
        background: white;
        padding: 8px 15px;
        border-radius: 6px;
    }
    
    .footer-trustee p {
        font-size: 14px;
        color: rgba(255,255,255,0.7);
        margin: 0;
        max-width: 500px;
    }
    
    @media (max-width: 768px) {
        .footer-trustee {
            flex-direction: column;
            gap: 20px;
            padding: 25px 20px;
        }
    }
    
    .footer-signup-form {
        display: flex;
        gap: 10px;
        margin-top: 20px;
        max-width: 400px;
    }
    
    .footer-email-input {
        flex: 1;
        padding: 12px 16px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        background: rgba(255,255,255,0.1);
        color: white;
    }
    
    .footer-email-input::placeholder {
        color: rgba(255,255,255,0.5);
    }
    
    .footer-email-input:focus {
        outline: 2px solid var(--primary);
        background: rgba(255,255,255,0.15);
    }
    
    .footer-signup-btn {
        padding: 12px 24px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
        white-space: nowrap;
    }
    
    .footer-signup-btn:hover {
        background: #e86d00;
    }
    
    .footer-signup-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
    
    .footer-signup-message {
        margin-top: 10px;
        font-size: 14px;
        min-height: 20px;
    }
    
    .footer-signup-message.success {
        color: #4ade80;
    }
    
    .footer-signup-message.error {
        color: #f87171;
    }
    
    @media (max-width: 480px) {
        .footer-signup-form {
            flex-direction: column;
        }
        
        .footer-signup-btn {
            width: 100%;
        }
    }
</style>
